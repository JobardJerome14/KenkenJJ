<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/block_id"
    android:orientation="vertical">

    <View
        android:id="@+id/vtop"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ff000d"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <View
            android:id="@+id/vleft"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#ff000d"
            android:layout_weight="1"
            />

        <RelativeLayout
            android:id="@+id/rl_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_overtexte"
                android:padding="10dp"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_below="@+id/tv_overtexte"
                android:id="@+id/et_texte"
                android:hint="\?"
                android:backgroundTint="@android:color/transparent"
                android:padding="10dp"
                android:textSize="10sp"
                android:inputType="number"
                android:maxLength="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <View
            android:id="@+id/vright"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#ff000d"
            android:layout_weight="1"
            />

    </LinearLayout>



    <View
        android:id="@+id/vbottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ff000d"
        android:layout_weight="1"
        />


</LinearLayout>