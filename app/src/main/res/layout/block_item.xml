<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/block_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="2dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_overtexte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp"
            tools:text="15x" />

        <TextView
            android:id="@+id/stylo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_overtexte"
            android:maxLength="1"
            android:padding="3dp"
            android:textAlignment="center"
            android:textColor="@color/block_number"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/crayon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stylo"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:textSize="12sp"
            android:textColor="@color/block_crayon"
            />

    </RelativeLayout>

    <View
        android:id="@+id/vtop"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary" />

    <View
        android:id="@+id/vleft"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary" />

    <View
        android:id="@+id/vright"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary" />

    <View
        android:id="@+id/vbottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary" />


</RelativeLayout>